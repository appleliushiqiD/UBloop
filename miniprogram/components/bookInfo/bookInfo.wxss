.bookInfo{ height: 200rpx; width: 100%; color: var(--global-font-color-g); border-bottom: 1rpx solid var(--global-font-color-l); display: flex; align-items: center; }
.bookInfo .cover{ width: 160rpx; height: 160rpx; }
.bookInfo .coverPic{ width: 100%; height: 100%; }
.bookInfo .textCont{ height: 160rpx; width: 500rpx; font-size: 24rpx; margin-left: 20rpx; display: flex; flex-direction: column; justify-content: space-around; }
.bookInfo .textCont .title{ white-space: nowrap; overflow-x: scroll; }
.bookInfo .textCont .title::-webkit-scrollbar{ display: none; }