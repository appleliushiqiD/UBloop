.detailBox{ width: 100%; height: 400rpx; }
.detailBox .mainBox{ width: 100%; height: 250rpx; display: flex; align-items: center; justify-content: center; }
.detailBox .mainBox .coverBox{ width: 200rpx; height: 200rpx; }
.detailBox .mainBox .coverBox .coverPic{ width: 100%; height: 100%; }
.detailBox .mainBox .infoBox{ width: 500rpx; height: 200rpx; margin-left: 20rpx; color: var(--global-font-color-g); font-size: 24rpx; display: flex; flex-direction: column; justify-content: space-around; white-space: nowrap; overflow: hidden; }
.detailBox .mainBox .infoBox .title{ font-size: 28rpx; overflow-x: auto; }
.detailBox .mainBox .infoBox .title::-webkit-scrollbar{ display: none; }
.detailBox .descBox{ width: 100%; height: 150rpx; padding: 0 20rpx; box-sizing: border-box; font-size: 24rpx; color: var(--global-font-color-g); position: relative; }
.detailBox .descBox .gist{ height: 100%; overflow: auto; }
.detailBox .descBox .gist::-webkit-scrollbar{ display: none; }

.postBtn{  width: 160rpx; height: 60rpx; background: rgba( 251,140,0, 0.74); border-radius: 30rpx; display: flex; justify-content: center; align-items: center; position: absolute; bottom: 10rpx; right: 20rpx; }
.postBtn .icon{ width: 30rpx; height: 30rpx; }

.popPage{ color: var(--global-font-color-g); background: var(--global-backgroud-color); }
.popPage .header{ font-size: 40rpx; line-height: 60rpx;text-align: center; padding: 20rpx 0; }
.popPage .bookInfo{ font-size: 28rpx; padding: 20rpx 0; border-bottom: 1rpx solid var(--global-part-line); }
.popPage .postForm .postType{ display: flex; justify-content: space-between; padding-top: 20rpx; }
.popPage .postForm .postPrice{ display: flex; padding-top: 20rpx; }
.popPage .postForm .postTime{ padding-top: 20rpx; }
.popPage .postForm .subBtn{ width: 300rpx; height: 100rpx; display: flex; justify-content: center; align-items: center; border-radius: 50rpx; margin-top: 20rpx; }

.posted .header{ font-size: 32rpx; color: var(--global-font-color-l); line-height: 80rpx; display: flex; justify-content: center; position: relative; }
.posted .header .selector{ font-size: 24rpx; color: #ffb300; position: absolute; right: 20rpx; }
.posted .postedBox{ min-height: 400rpx; max-height: 1000rpx; }