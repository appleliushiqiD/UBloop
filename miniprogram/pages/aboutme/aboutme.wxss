.userInfo{ width: 100%; height: 300rpx; display: flex; justify-content: center; align-items: flex-end; padding-bottom: 60rpx;}
.userInfo .userAvatar{ all:initial; width: 150rpx; height: 150rpx; border-radius: 50%; }
.userInfo .userAvatar .avatar{ width: 100%; height: 100%; border-radius: 50%; }
.userInfo .userCont{ width: 300rpx; height: 150rpx; color: var(--global-font-color-g); padding-left: 40rpx; display: flex; flex-direction: column; justify-content: space-between;}
.userInfo .userCont .nickName{ font-size: 36rpx; color: #42bd41; }
.userInfo .userCont .msgTool{ height: 30rpx; font-size: 28rpx; }
.userInfo .userCont .userSchool{ height: 30rpx; font-size: 28rpx; display: flex; align-items: center;}
.userInfo .userCont .userSchool .icon{ height: 30rpx; }
.changeTip{ color: var(--global-font-color-l); font-size: 30rpx; text-align: center; }
.saveBtn{ width: 100%; height: 100rpx; padding: 20rpx 0; }
.saveBtn .btn{ width: 300rpx; height: 100%; display: flex; justify-content: center; align-items: center; border-radius: 50rpx; }



.rateBox{ width: 100%; padding: 30rpx 20rpx; }
.rateBox .header{ font-size: 30rpx; color: var(--global-font-color-g); text-align: center; }
.rateBox .rateItem{ color: var(--global-font-color-g); padding-top: 10rpx; box-sizing: border-box; border-bottom: thin solid var(--global-part-line); overflow-wrap: break-word; }

.notLoginTip{ font-size: 40rpx; color: var(--global-font-color-g); text-align: center; padding-top: 50rpx; }